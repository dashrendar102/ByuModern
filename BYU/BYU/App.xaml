<Application
    x:Class="BYU.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BYU"
    xmlns:localData="using:BYU.Data"
    RequestedTheme="Light">

    <Application.Resources>
        <!-- Application-specific resources -->

        <x:String x:Key="AppName">BYU8</x:String>
        <Color x:Key="BYU_BLUE">#FF002255</Color>
        <Color x:Key="BYU_TAN">#FFC5AF7D</Color>
        <SolidColorBrush x:Key="BYU_BLUE_BRUSH" Color="{StaticResource BYU_BLUE}"/>

    </Application.Resources>
</Application>
